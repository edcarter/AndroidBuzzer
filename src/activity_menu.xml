<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity"
    android:id="@+id/activity_menu"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/imageView"
        android:src="@drawable/hitmarker"
        android:layout_weight="0.5"
        android:contentDescription="@string/main_menu_image_desc" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reaction_tester_button_text"
        android:id="@+id/button"
        android:onClick="navigate_to_reaction_tester"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gameshow_mode_button_text"
        android:id="@+id/button2"
        android:onClick="navigate_to_player_selector"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/statistics_button_text"
        android:id="@+id/button3"
        android:onClick="navigate_to_statistics" />



</LinearLayout>
